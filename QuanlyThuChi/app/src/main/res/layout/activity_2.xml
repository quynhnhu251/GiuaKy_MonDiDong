<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:orientation="vertical"
    tools:context="com.example.admin.quanlythuchi.Activity2">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Thêm chi tiêu"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:background="#52d641"
        android:textColor="#ffff"
        android:textSize="25sp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtHinhThuc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="4"
            android:text="Hình thức: "
            android:textColor="#1a1a1a"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_Thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Thu"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radio_Chi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Chi"
                android:textSize="20sp" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNoiDung"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="4"
            android:text="Nội dung: "
            android:textColor="#1a1a1a"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtNoidung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:hint="Nhập nội dung" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="10"
        android:layout_height="0dp">

        <TextView
            android:layout_weight="4"
            android:id="@+id/txtSoTien"
            android:layout_width="150dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="Số tiền: "
            android:textSize="20sp"
            android:textColor="#1a1a1a"/>
        <EditText
            android:id="@+id/edtSotien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập số tiền"
            android:layout_weight="6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="10"
        android:layout_height="0dp">

        <TextView
            android:layout_weight="4"
            android:id="@+id/txtNgay"
            android:layout_width="150dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="Ngày: "
            android:textSize="20sp"
            android:textColor="#1a1a1a"/>

        <EditText
            android:id="@+id/edtNgay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chọn ngày"
            android:layout_weight="6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="10"
        android:layout_height="0dp">

        <TextView
            android:layout_weight="4"
            android:id="@+id/txtNote"
            android:layout_width="150dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="Note: "
            android:textSize="20sp"
            android:textColor="#1a1a1a"/>

        <EditText
            android:id="@+id/edtNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ghi chu"
            android:layout_weight="6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <Button
            android:layout_marginBottom="5dp"
            android:id="@+id/btnLuu"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="lưu"
            android:layout_marginHorizontal="10dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_weight="5"
            android:background="#fc5555" />
        <Button
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/btnHienThi"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Hiển Thi"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_weight="5"
            android:background="#fc5555" />



    </LinearLayout>


</LinearLayout>
